{
    "name": "fudgel",
    "version": "1.3.0",
    "description": "Minimalist web component library to take the pain out of automatic updates.",
    "keywords": [
        "lightweight",
        "web-component",
        "web",
        "component",
        "router",
        "slot",
        "declarative",
        "micro",
        "tiny",
        "framework"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/fidian/fudgel.git"
    },
    "homepage": "https://fudgel.js.org/",
    "author": "Tyler Akins <fidian@rumkin.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/fidian/fudgel/issues"
    },
    "scripts": {
        "build": "scripts/build",
        "build:unminified": "scripts/build-unminified",
        "docs": "docs/update-scripts",
        "reinstall": "rm -rf node_modules/ package-lock.json && npm install",
        "start": "light-server -s docs/ -p 8080",
        "test": "scripts/test",
        "test:interactive": "cypress open --component"
    },
    "main": "dist/fudgel.js",
    "module": "dist/fudgel.mjs",
    "unpkg": "dist/fudgel.umd.min.js",
    "type": "module",
    "types": "dist/fudgel.d.ts",
    "devDependencies": {
        "agadoo": "^3.0.0",
        "cypress": "^13.7.2",
        "cypress-ct-custom-elements": "^1.0.0",
        "light-server": "^2.9.1",
        "rollup": "^4.14.1",
        "terser": "^5.30.3",
        "typescript": "^5.4.4",
        "vite": "^5.2.8"
    }
}
